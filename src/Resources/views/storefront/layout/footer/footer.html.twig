{% sw_extends "@Storefront/storefront/layout/footer/footer.html.twig" %}

{% block layout_footer_payment_shipping_logos %}
    {% block layout_battron_footer_payment_shipping_logos %}
        <div id="footerColumns"
             class="row footer-columns"
             data-collapse-footer="true">
            {% set config = page.footer.extensions.BattronFooterIcons %}
            {% set numberWords = ['One', 'Two', 'Three', 'Four', 'Five', 'Six', 'Seven', 'Eight', 'Nine', 'Ten'] %}
            {% block layout_footer_payment_logos %}
                <div class="col-md-6 footer-column js-footer-column">
                    <div class="footer-column-headline footer-headline js-collapse-footer-column-trigger text-white"
                         id="collapseFooterPaymentTitle"
                         data-target="#paymentMethods"
                         aria-expanded="true"
                         aria-controls="paymentMethods">
                        {{'battron.footer.paymentLogo.title' |trans }}
                        <div class="footer-column-toggle">
                                <span class="footer-plus-icon">{% sw_icon 'plus' %}</span>
                                <span class="footer-minus-icon">{% sw_icon 'minus' %}</span>
                            </div>
                    </div>
                    <div id="paymentMethods" class="footer-column-content collapse js-footer-column-content">
                        <div class="row justify-content-center">
                            {% for i in 0..9 %}
                                {% set logoUrl = config['imgArray']['paymentLogo' ~ numberWords[i]] %}
                                {% set link = config['paymentLink' ~ numberWords[i]] %}
                                {% if logoUrl and link %}
                                    <div class="col-4 p-2 d-flex justify-content-center align-items-center">
                                        <a href="{{ link }}">
                                            <img src="{{ logoUrl }}"
                                                 alt="Payment Logo {{ numberWords[i] }}"
                                                 class="img-fluid w-75  mx-auto d-block">
                                        </a>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endblock %}

            {% block layout_footer_shipping_logos %}
                <div class="col-md-6 footer-column js-footer-column">
                    <div class="footer-column-headline footer-headline js-collapse-footer-column-trigger text-white"
                         id="collapseFooterShippingTitle"
                         data-target="#shippingMethods"
                         aria-expanded="true"
                         aria-controls="shippingMethods">
                            {{ 'battron.footer.shippingLogo.title' |trans  }}
                        <div class="footer-column-toggle">
                <span class="footer-plus-icon">
                    {% sw_icon 'plus' %}
                </span>
                            <span class="footer-minus-icon">
                    {% sw_icon 'minus' %}
                </span>
                        </div>
                    </div>
                    <div id="shippingMethods" class="footer-column-content collapse js-footer-column-content">
                        <div class="row justify-content-center">
                            {% for i in 0..9 %}
                                {% set logoUrl = config['imgArray']['shippingLogo' ~ numberWords[i]] %}
                                {% set link = config['shippingLink' ~ numberWords[i]] %}
                                {% if logoUrl and link %}
                                    <div class="col-4 p-2 d-flex justify-content-center align-items-center">
                                        <a href="{{ link }}">
                                            <img src="{{ logoUrl }}"
                                                 alt="Shipping Logo {{ numberWords[i] }}"
                                                 class="img-fluid w-75  mx-auto d-block">
                                        </a>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
